#!/usr/bin/env bash
#
#  carpinchod The carpincho core server.
#
#
# chkconfig: 345 80 20
# description: carpinchod
# processname: carpinchod
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/carpinchod, see below
if [ -f /etc/sysconfig/carpinchod ]; then
        . /etc/sysconfig/carpinchod
fi

RETVAL=0

prog=carpinchod
# you can override the lockfile via CARPINCHOD_LOCKFILE in /etc/sysconfig/carpinchod
lockfile=${CARPINCHOD_LOCKFILE-/var/lock/subsys/carpinchod}

# carpinchod defaults to /usr/bin/carpinchod, override with CARPINCHOD_BIN
carpinchod=${CARPINCHOD_BIN-/usr/bin/carpinchod}

# carpinchod opts default to -disablewallet, override with CARPINCHOD_OPTS
carpinchod_opts=${CARPINCHOD_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $carpinchod $carpinchod_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog -t600
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
